{
    "[json]": {
        "lowlight-patterns.rules": [
            {
                "startRule": ".*\\$schema.*",
                "endRule": "}",
                "opacity": "mid"
            }
        ]
    },
    "[go]": {
        "lowlight-patterns.rules": [
            {
                "startRule": "if err != nil",
                "endRule": "}",
                // "endRule": "t.Error",
                "opacity": "min",
                "maxLinesBetween": 20,
                "sameScope": true
            }
        ],
        "lowlight-patterns.maxNumberOfLinesToScan": 500
    },
    "lowlight-patterns.opacity": "mid",
    "lowlight-patterns.maxNumberOfLinesToScan": 1000
}
